@{
    ViewData["Title"] = ViewBag.Message;
}
<h2>@ViewData["Title"]</h2>

<form class="home_connexion_container" action="/Home/Connexion" method="post">
    <div class="input-group" id="home_connexion_label">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input id="login" type="text" class="form-control" name="login" placeholder="Login" required>
    </div>
    <div class="input-group"  id="home_connexion_label">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input id="password" type="password" class="form-control" name="password" placeholder="Mot de Passe" required>
    </div>
    <div class="checkbox">
        <label><input type="checkbox"> Se souvenir de moi</label>
    </div>
    <button type="submit" class="btn btn-success">Submit</button>
</form>