@{
    ViewData["Title"] = "ConsultationRDV";

}

<h2>Comptable</h2>

@{
<div class="container">
    <h2>Bienvenue @ViewBag.Employe.Prenom @ViewBag.Employe.Nom</h2>
    <p>Consultation de vos Rendez vous</p>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>
                    <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#ajouterRDVModal"><span class="glyphicon glyphicon-plus-sign"></span>Ajouter</button>
                </td>
                <td>
                    <button type="submit" class="btn btn-success" data-toggle="modal" data-target="#modifierRDVModal"><span class="glyphicon glyphicon-edit"></span>Modifier</button>
                </td>
                <td>
                    <button type="submit" class="btn btn-warning" data-toggle="modal" data-target="#supprimerRDVModal"><span class="glyphicon glyphicon-trash"></span>Supprimer</button>
                </td>
            </tr>
            <tr>
                <th></th>
                <th>Praticien</th>
                <th>Date RDV</th>
                <th>Motif du rendez-vous</th>
                <th>Indice de Confiance</th>
                <th>Date Bilan</th>
                <th>Enchantillons donnés</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var rdv in ViewBag.MesRDV)
            {
            <tr>
                <th>
                    <input type="radio" aria-label="" name="rdv_radio" value="@rdv.Id_rdv" data-id="@rdv.Id_rdv">
                </th>
                <th>@rdv.Praticien.Nom</th>
                <th>@rdv.Date_rdv</th>
                <th>@rdv.Motif_rdv</th>
                <th>@rdv.Indice_confiance</th>
                <th>@rdv.Date_bilan</th>
                <th>@rdv.Liste_echantillons_donnes.Count</th>

            </tr>
            }
        </tbody>
    </table>

    <div class="modal fade" id="ajouterRDVModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Compte Rendu</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>


                        <div class="container">
                            <div class="row">

                                <div class='col-sm-6'>
                                    <div class="form-group">

                                        <label for="date_rdv" class="col-form-label">Date Rendez-Vous:</label>
                                        <div class='input-group date' id='datetimepicker1'>
                                            <input type='text' class="form-control" id="date_rdv" />
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>

                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-group">
                            <select class="browser-default custom-select" id="select_praticien">
                                <option selected>Choisir un praticien</option>
                                @{
                                    foreach (var praticien in ViewBag.MesPraticiens)
                                    {
                                        <option value="@praticien.Id">@praticien.Nom @praticien.Prenom</option>
                                    }
                                }
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="praticien" id="praticien" placeholder="Praticien">
                            <input type="text" class="form-control" id="recipient-name_Praticien">
                        </div>
                        <div class="form-group">
                            <label for="message-text" class="col-form-label">Message:</label>
                            <textarea class="form-control" id="message-text"></textarea>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Envoyer</button>
                </div>
            </div>
        </div>
    </div>

    @*Permet d'appeler d'autre vue*@
    @RenderPage("~/Views/Commercial/Detail_RDV.cshtml")

</div>
    @section scripts {
        <script type="text/javascript">
            $('#ajouterRDVModal').on('show.bs.modal', function (event) {

                var id_rdv = $("input[name='rdv_radio']:checked").data('id');

                try {

                    $.ajax({
                        type: "POST",
                        url: "http://localhost:51921/Commercial/AjaxReceiver",
                        data: 'table=' + "rendez_vous" + '&id=' + id_rdv,
                    }).then(function (response) {
                        var JsonResponse = JSON.parse(response);

                        $("#select_praticien").val(JsonResponse.Praticien.Id);

                        var milli = JsonResponse.Date_rdv.replace(/\/Date\((-?\d+)\)\//, '$1');
                        var date = new Date(parseInt(milli));

                        $('#date_rdv').val(date);
                    });
                }
                catch (ex) {
                    alert("catch Ajax Error");
                }

                var modal = $(this)

                modal.find('.modal-title').text('Fiche Frais n°' + id_rdv)
                modal.find('.modal-body input').val(id_rdv)
            });

            $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>
    }
    }

